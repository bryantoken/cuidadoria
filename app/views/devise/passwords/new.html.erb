<div class="w-full h-full flex justify-center items-center">
<div class="flex flex-col bg-white  w-96 h-96 border-1 border px-8 py-8 rounded-xl drop-shadow-lg justify-around">
<h2 class="text-4xl">Recuperação de senha</h2>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'rounded-md w-full'%>
  </div>
<br/>
  <div class="actions grid grid-col-1 gap-2">
   <%= f.submit "Enviar instruções", class:"rounded-lg py-3 px-5 bg-blue-500 hover:bg-blue-600 text-white cursor-pointer inline-block font-medium"%>
   <div class="flex justify-between">
    <%= render ("devise/shared/links")%>
   </div>
   
  </div>
<% end %>
</div>
</div>



